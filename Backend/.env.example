# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-min-50-chars-required
ENVIRONMENT=production
DEBUG=False

# Database (Azure PostgreSQL)
AZURE_POSTGRESQL_CONNECTIONSTRING=your-connection-string

# Email Configuration (Zoho)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=admin@only2bali.com
EMAIL_HOST_PASSWORD=use-app-specific-password-not-regular-password
DEFAULT_FROM_EMAIL=admin@only2bali.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1-your-twilio-number

# Redis Cache
REDIS_URL=rediss://your-redis-host:6380/1
REDIS_ACCESS_KEY=your-redis-access-key

# CORS & Security
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# OTP Configuration
OTP_LENGTH=6
OTP_VALIDITY_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_MAX_REQUESTS=5
OTP_TIME_WINDOW=2

# Azure Configuration
WEBSITE_HOSTNAME=your-azure-domain
AZURE_DOMAIN=your-azure-domain

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# CRITICAL: Email Configuration Credentials
# NOTE: EMAIL_HOST_PASSWORD must be an app-specific password, NOT user's actual password
EMAIL_HOST_PASSWORD=your-app-specific-email-password

# CRITICAL: Zoho API Credentials for Ticket System
# These credentials must be obtained from Zoho Desk and set securely in production
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token
ZOHO_ACCESS_TOKEN=your-zoho-access-token
ZOHO_DEPARTMENT_ID=your-zoho-department-id
